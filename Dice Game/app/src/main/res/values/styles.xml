<?xml version="1.0" encoding="utf-8"?>

    <resources>

    <style name="RollButtonStyle" parent="Widget.Material3.Button.ElevatedButton.Icon" >
        <item name="icon">@drawable/dice_icon</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:backgroundTint">@color/roll_button_colors_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/track_color</item>
        <item name="iconTint">@color/white</item>
        <item name="iconSize">40dp</item>
    </style>

    <style name="DisplayStyle" parent="Widget.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/display_text_color</item>
    </style>

    <style name="DiceBoxStyle">
        <item name="android:background">@drawable/dice_box_drawable</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">40dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="DiceImageViewStyle">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
    </style>

</resources>